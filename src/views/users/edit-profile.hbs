<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h2>Editar perfil</h2>
            </div>
            <div class="card-body">
                <form action="/users/edit-profile/{{user._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{user.name}}">
                    </div>
                    {{#each users}}
                    <div class="form-group">
                        <input id="datepicker" class="form-control" name="birthday" placeholder="Fecha de nacimiento"
                            value="{{ day }}/{{ month }}/{{ year }}">
                    </div>
                    {{/each}}
                    <div class="form-group">
                        <input type="description" class="form-control" name="description" placeholder="Descripción" value="{{user.description}}">
                    </div>
                    <div class="form-group">
                        <input type="tel" class="form-control" name="tel" placeholder="Teléfono" value="{{user.tel}}">
                    </div>
                    <h6> Redes sociales </h6>
                    <div class="dropdown-divider mb-3"></div>
                    <div class="form-group input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">facebook.com/</div>
                        </div>
                        <input type="facebook" class="form-control" name="facebook" placeholder="Facebook"
                            value="{{user.facebook}}">
                    </div>
                    <div class="form-group input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">@</div>
                        </div>
                        <input type="twitter" class="form-control" name="twitter" placeholder="Twitter"
                            value="{{user.twitter}}">
                    </div>
                    <div class="form-group input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">@</div>
                        </div>
                        <input type="instagram" class="form-control" name="instagram" placeholder="Instagram"
                            value="{{user.instagram}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>