<div class="row">
    {{#each notes}}
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-header">

                {{ day }}/{{ month }}/{{ year }}

            </div>
            <div class="card-body">
                <h5 class="card-title d-flex justify-content-between align-items-center">
                    {{ title }}
                    <a class="nav-link fas fa-ellipsis-h" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                        <!-- <a class="dropdown-item" href="/notes/edit/{{_id}}">
                            <span style="">
                                <i class="fas fa-edit"></i> Editar </i>
                            </span>
                        </a> -->
                        <a class="dropdown-item">
                            <form action="/notes/edit/{{_id}}">
                                <button class="dropdown-item btn btn-primary-outline" type="submit"
                                    style="background-color:transparent">
                                    <span style="font-size: 13px;">
                                        <i class="fas fa-edit"></i> Editar </i>
                                    </span>
                                </button>
                            </form>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item">
                            <button class="dropdown-item btn btn-primary-outline" data-toggle="modal"
                                data-target="#exampleModalCenter" style="background-color:transparent">
                                <span style="font-size: 13px;">
                                    <i class="fas fa-trash"></i> Eliminar </i>
                                </span>
                            </button>
                        </a>
                    </div>
                </h5>
                <p>{{description}}</p>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Eliminar nota</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Seguro que quieres eliminar esta nota ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola {{username}}!</h1>
            <p class="lead">No hay notas ingresadas a√∫n</p>
            <a href="/notes/add" class="btn btn-success btn-block">Crea una nueva</a>
        </div>
    </div>
    {{/each}}
</div>